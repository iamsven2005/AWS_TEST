generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model images {
  id        String  @id @default(cuid())
  imageurl  String  @db.LongText
  name      String
  companyId String
  approved  String
  retrived  String  @db.Text // This should be fine as @db.Text
  halal     Boolean
  healthy   Boolean
  AI        String  @db.Text
}

model User {
  id         String    @id @default(cuid())
  username   String    @unique
  email      String    @unique
  password   String
  role       String    @default("Staff")
  otp        String?
  otpExpires DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  lastLogin  DateTime?
}

model Company {
  id        String   @id @default(cuid())
  img       String   @db.LongText
  name      String
  archived  Boolean  @default(false)
  staff     String?
  manager   String?
  createdAt DateTime @default(now())
}

model Role {
  id        String @id @default(cuid())
  companyId String
  userId    String
  rolename  String
  position  Int
}

model Notification {
  id        String @id @default(cuid())
  user_from String
  user_to   String
  body      String
  read      String
}

model Checklist {
  id   String @id @default(cuid())
  name String
  body String
}
